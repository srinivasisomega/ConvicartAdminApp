@model ConvicartAdminApp.Models.Preference

@{
    ViewData["Title"] = "Delete Preference";
}

<h2>Delete Preference</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <h5>@Model.PreferenceName</h5>
        <p>@Model.PreferenceDescription</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PreferenceId" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
