@model ConvicartAdminApp.Models.RecipeSteps

@{
    ViewData["Title"] = "Create Recipe Step";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="StepNumber"></label>
        <input asp-for="StepNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StepDescription"></label>
        <textarea asp-for="StepDescription" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Upload Step Image</label>
        <input type="file" name="StepImageFile" class="form-control" />
    </div>
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
